<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/grey" />

            <stroke android:width="1sp" android:color="@color/white_70" />

            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />

            <padding android:bottom="4sp" android:left="20sp" android:right="20sp" android:top="4sp" />
        </shape></item>
        <item android:state_focused="true"><shape>
            <solid android:color="@color/grey" />

            <stroke android:width="1sp" android:color="@color/white_70" />

            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />

            <padding android:bottom="4sp" android:left="20sp" android:right="20sp" android:top="4sp" />
        </shape></item>
    <item><shape>
            <solid android:color="@color/grey" />

            <stroke android:width="1sp" android:color="@color/dark_grey" />

            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />

            <padding android:bottom="4sp" android:left="20sp" android:right="20sp" android:top="4sp" />
        </shape></item>

</selector>